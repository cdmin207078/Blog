<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>控制中心 - @ViewBag.Title</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.6 -->
    <link rel="stylesheet" href="~/Areas/Admin/Content/AdminLTE/bootstrap/css/bootstrap.min.css">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Areas/Admin/Content/AdminLTE/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/Areas/Admin/Content/AdminLTE/ionicons.min.css">


    <!-- Theme style -->
    <link rel="stylesheet" href="~/Areas/Admin/Content/AdminLTE/dist/css/AdminLTE.min.css">
    <!-- AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->
    <link rel="stylesheet" href="~/Areas/Admin/Content/AdminLTE/dist/css/skins/_all-skins.min.css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <!-- iCheck for checkboxes and radio inputs -->
    <link href="~/Areas/Admin/Content/AdminLTE/plugins/iCheck/all.css" rel="stylesheet" />

    <!-- animate css -->
    <link href="~/Areas/Admin/Content/css/animate.css" rel="stylesheet" />

    <!-- jquery-confirm -->
    <link href="~/Areas/Admin/Content/jquery-confirm/jquery-confirm.min.css" rel="stylesheet" />
    <!-- custom styles -->
    @RenderSection("Styles", false)


</head>
<body class="hold-transition skin-blue sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">
        <header class="main-header">
            <!-- Logo -->
            <a href="javascript:;" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini"><b>中心</b></span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg"><b>控制</b>中心</span>
            </a>
            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
            </nav>
        </header>
        <!-- =============================================== -->
        <!-- Left side column. contains the sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel">
                    <div class="pull-left image">
                        <img src="~/Areas/Admin/Content/AdminLTE/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
                    </div>
                    <div class="pull-left info">
                        <p>Alexander Pierce</p>
                        <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                    </div>
                </div>
                <!-- /.search form -->
                <!-- sidebar menu: : style can be found in sidebar.less -->
                <ul class="sidebar-menu">
                    <li class="header">功能</li>
                    <li><a href="/admin/home/index"><i class="fa fa-dashboard"></i><span>控制面板</span></a></li>
                    <li class="header">文章</li>
                    <li><a href="/admin/article/add"><i class="fa fa-circle-o"></i><span>撰写文章</span></a></li>
                    <li><a href="/admin/article/index"><i class="fa fa-circle-o"></i><span>文章列表</span></a></li>
                    <li class="header">用户</li>
                    <li><a href="/admin/user/index"><i class="fa fa-circle-o text-circle-o"></i> <span>用户管理</span></a></li>
                    <li class="header">其它</li>
                    <li><a href="#"><i class="fa fa-circle-o text-circle-o"></i> <span>修改密码</span></a></li>
                </ul>
            </section>
            <!-- /.sidebar -->
        </aside>
        <!-- =============================================== -->
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>@ViewBag.Title</h1>
            </section>
            <!-- Main content -->
            <section class="content">
                @RenderBody()
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
    </div>
    <!-- ./wrapper -->
    <!-- jQuery 2.2.3 -->
    <script src="~/Areas/Admin/Content/AdminLTE/plugins/jQuery/jquery-2.2.3.min.js"></script>
    <!-- Bootstrap 3.3.6 -->
    <script src="~/Areas/Admin/Content/AdminLTE/bootstrap/js/bootstrap.min.js"></script>
    <!-- SlimScroll -->
    <script src="~/Areas/Admin/Content/AdminLTE/plugins/slimScroll/jquery.slimscroll.min.js"></script>
    <!-- iCheck 1.0.1 -->
    <script src="~/Areas/Admin/Content/AdminLTE/plugins/iCheck/icheck.min.js"></script>
    <!-- FastClick -->
    <script src="~/Areas/Admin/Content/AdminLTE/plugins/fastclick/fastclick.js"></script>

    <!-- jquery-confirm -->
    <script src="~/Areas/Admin/Content/jquery-confirm/jquery-confirm.min.js"></script>

    <!-- AdminLTE App -->
    <script src="~/Areas/Admin/Content/AdminLTE/dist/js/app.min.js"></script>


    <!-- Layout Js -->
    <script src="~/Areas/Admin/Scripts/Layout.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>
