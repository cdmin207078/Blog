@model  JIF.Blog.Web.Areas.Admin.Models.ArticleEditViewModel
@{
    ViewBag.Title = "撰写文章";
}

@section Styles {
    <link href="~/Areas/Admin/Content/simditor/styles/simditor.css" rel="stylesheet" />
}

@using (Html.BeginForm("Edit", "Article", FormMethod.Post))
{
    <div class="row">
        <div class="col-lg-8">
            <div class="box box-primary">
                <div class="box-body">
                    <div class="form-group">
                        <label for="txtTitle">文章标题</label>
                        <input type="text" class="form-control" id="txtTitle" name="Title" placeholder="请输入文章标题" value="@Model.Article.Title">
                    </div>

                    <div class="form-group">
                        <label>正文内容</label>
                        <textarea class="form-control" rows="3" id="editor" name="Content" placeholder="请输入正文内容">@Model.Article.Content</textarea>
                    </div>

                    <div class="form-group">
                        <label>文章分类</label>
                        <select class="form-control" id="selCategoryId" name="CategoryId">
                            @foreach (var c in Model.Categories)
                            {
                                <option value="@c.Id">@c.Name</option>
                            }
                            <option value="1">极光</option>
                            <option value="2">流芳</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-2 col-md-2">
                            <label><input type="checkbox" class="minimal" name="AllowComments" @(Model.Article.AllowComments ? "checked" : "")> 允许评论</label>
                        </div>

                        <div class="col-sm-2 col-md-2">
                            <label><input type="checkbox" class="minimal" name="Published" @(Model.Article.Published ? "checked" : "")> 公开发布</label>
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">保 存</button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts{
    <script src="~/Areas/Admin/Content/simditor/scripts/module.js"></script>
    <script src="~/Areas/Admin/Content/simditor/scripts/hotkeys.js"></script>
    <script src="~/Areas/Admin/Content/simditor/scripts/uploader.js"></script>
    <script src="~/Areas/Admin/Content/simditor/scripts/simditor.js"></script>

    <script type="text/javascript">
        var editor = new Simditor({
            textarea: $('#editor')
            //optional options
        });



    </script>
}
