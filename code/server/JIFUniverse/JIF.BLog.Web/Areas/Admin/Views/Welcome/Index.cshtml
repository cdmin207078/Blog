@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AdminLTE 2 | Log in</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.6 -->
    <link href="~/Areas/Admin/Content/AdminLTE/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Areas/Admin/Content/AdminLTE/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/Areas/Admin/Content/AdminLTE/ionicons.min.css">

    <!-- Theme style -->
    <link rel="stylesheet" href="~/Areas/Admin/Content/AdminLTE/dist/css/AdminLTE.min.css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="javascript:;"><b>后台管理</b></a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <form method="post">
                <div class="form-group has-feedback">
                    <input type="text" class="form-control" placeholder="帐号" name="Account" required>
                    <span class="fa fa-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="密码" name="Password" required>
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">登 录</button>
                    </div>
                    <!-- /.col -->
                </div>
                @if (TempData["JIFExceptionMessage"] != null)
                {
                    <div class="row">
                        <br />
                        <div class="col-md-12">
                            <div class="callout callout-danger">
                                <p>@TempData["JIFExceptionMessage"]</p>
                            </div>
                        </div>
                    </div>
                }
                @if (ViewBag.User != null)
                {
                    <div class="row">
                        <br />
                        <div class="col-md-12">
                            <div class="callout callout-success">
                                <p>Name: @ViewBag.User.Account</p>
                            </div>
                        </div>
                    </div>
                }
            </form>
        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery 2.2.3 -->
    <script src="~/Areas/Admin/Content/AdminLTE/plugins/jQuery/jquery-2.2.3.min.js"></script>
    <!-- Bootstrap 3.3.6 -->
    <script src="~/Areas/Admin/Content/AdminLTE/bootstrap/js/bootstrap.min.js"></script>
</body>
</html>
