@using System.Web.Optimization
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>

    @Styles.Render("~/bundles/simditor/Css")
    <style type="text/css">
        body {
            background-image: url('../Content/images/starfield.jpg');
            background-repeat: repeat;
            background-attachment: fixed;
        }

        .container {
            margin: 0px auto;
            margin-top:20px;
            margin-bottom: 100px;
            padding: 0px 10px;
            width: 1000px;
            border: 1px #ccc solid;
            box-shadow: 0px 0px 15px #ccc;
            background-color: #fff;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="art-title">@ViewBag.Article.Title</h1>
        <hr />
        <div class="art-content">@Html.Raw(ViewBag.Article.Content)</div>
    </div>
</body>
</html>
